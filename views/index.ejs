    <div class="container" style="margin-top: 40px;" id="sportbg">
        <hr>
        <h1 class="display-3" id="sportsheadtitle" >SPORTS</h1>
        <br>
        <div class="row">
        <div class="row">
         <% for(var a =0; a < sports.length; a ++){ %> 
              <div class="col-3">
  <div class="card" >
                <img class="card-img-top" src="<%= sports[a].pic %> " alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title"><%= (sports[a].title).slice(0, 30)  %>... </h5>
                  
                  <p class="card-text"><%= (sports[a].desc).slice(0, 70)  %>.. </p>
                  <h6 style="font-size: 12px;"><%= sports[a].date  %> </h6>

                  <a href="/post/<%= sports[a].key  %> " class="btn btn-sm btn-primary" id="viewbtn">View</a>
                  <a href="/edit/<%= sports[a].key  %> " class="btn btn-sm btn-warning" id="editbtn">Edit</a>
                    
                  <form action="/deletesport" method="post">
                    <button class="btn btn-sm btn-danger" id="deletebtn">Delete</button>
                  <input type="text" name="del" style="visibility: hidden;" value="<%=sports[a].key  %> ">
                  
                    
                  </form>
                 </div>
              </div>
            </div>
  <% } %> 
</div>
