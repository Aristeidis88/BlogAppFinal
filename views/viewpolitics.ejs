<!DOCTYPE html>
<html lang="en">
    <%- include('head')  %> 
<body>
    <%- include("layouts/navbar")  %> 



<% if(politics.length === 0){ %>
    <div class="text-center">
      <h1 class="display-2">404 - Not found</h1>

    </div>

   
    
    <% }else { %>
      <div class="container">

        <style>
          .bg{
            height: 400px;
            background-image: url('<%= politics.pic %>');
            width: 1200px;
              background-repeat: no-repeat;
          }
        </style>
      <h1 class="display-3">
        <%= politics.title  %> 
      </h1>
        <div class="bg">
          
        </div>
     
      
      <p><%= politics.date  %> </p>
      <p class="lead">
        <%= politics.desc  %> 
      </p>
    </div>
      
      <% } %>


    </body>
    <br>
    <%- include("layouts/footer")  %> 
    </html>