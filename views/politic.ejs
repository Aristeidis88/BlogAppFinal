<!DOCTYPE html>
<html lang="en">
<head>
   <%- include("head")  %> 
</head>
<body>

    <%- include("layouts/navbar")  %> 



<div class="container" style="margin-top: 40px;" id="politicsbg">
  <hr>
  <h1 class="display-3" id="politicsheadtitle" >POLITIC</h1>
  <br>
  <div class="row">
  <div class="row">
   <% for(var a =0; a < politics.length; a ++){ %> 
        <div class="col-3">
<div class="card">
          <img class="card-img-top" src="<%= politics[a].pic %> " alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= (politics[a].title).slice(0, 30)  %>... </h5>
            
            <p class="card-text"><%= (politics[a].desc).slice(0, 70)  %>.. </p>
            <h6 style="font-size: 12px;"><%= politics[a].date  %> </h6>

            <a href="/postpolitic/<%= politics[a].key  %> " class="btn btn-sm btn-primary" id="viewbtn">View</a>
            <a href="/editpolitic/<%= politics[a].key  %> " class="btn btn-sm btn-warning" id="editbtn">Edit</a>

            <form action="/deletepolitic" method="post">
              <button class="btn btn-sm btn-danger" id="deletebtn">Delete</button>
            <input type="text" name="del" style="visibility: hidden;" value="<%=politics[a].key  %> ">
            
              
            </form>
           </div>
        </div>
      </div>
<% } %> 
</div>
</div></div>

 










</body>
<br>
<%- include("layouts/footer")  %> 
</html>