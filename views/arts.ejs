<!DOCTYPE html>
<html lang="en">
<head>
   <%- include("head")  %> 
</head>
<body>

    <%- include("layouts/navbar")  %> 



   



  <div class="container" style="margin-top: 40px;"  id="artsbg">
    <hr>
    <h1 class="display-3" id="artsheadtitle">ARTS</h1>
    <br>
    <div class="row">
    <div class="row">
     <% for(var a =0; a < arts.length; a ++){ %> 
          <div class="col-3">
<div class="card">
            <img class="card-img-top" src="<%= arts[a].pic %> " alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= (arts[a].title).slice(0, 30)  %>... </h5>
              
              <p class="card-text"><%= (arts[a].desc).slice(0, 70)  %>.. </p>
              <h6 style="font-size: 12px;"><%= arts[a].date  %> </h6>

              <a href="/postart/<%= arts[a].key  %> " class="btn btn-sm btn-primary" id="viewbtn">View</a>
              <a href="/editart/<%= arts[a].key  %> " class="btn btn-sm btn-warning" id="editbtn">Edit</a>

              <form action="/deleteart" method="post">
                <button class="btn btn-sm btn-danger" id="deletebtn">Delete</button>
              <input type="text" name="del" style="visibility: hidden;" value="<%=arts[a].key  %> ">
              
                
              </form>
             </div>
          </div>
        </div>
<% } %> 
</div>
</div></div>
















</body>
<br>
<%- include("layouts/footer")  %> 
</html>